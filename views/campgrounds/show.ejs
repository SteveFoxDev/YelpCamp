<% layout('./layouts/boilerplate') %>
    <a href="/campgrounds" class="btn btn-primary">Go Back</a>

    <div class="row">
        <h1 class="text-center display-4">
            <%= campground.title %>
        </h1>
        <div class="col-md-6">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= campground.location %>
                    </h6>
                    <blockquote class="blockquote mb-0">
                        <p>Campground submitted by:</p>
                        <footer class="blockquote-footer"><%= campground.author.username %></footer>
                      </blockquote>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                    <p class="card-text">Price: <%= campground.price %>/night</p>
                    <a class="btn btn-outline-primary" href="/campgrounds/<%= campground._id %>/edit">Edit
                        Campground</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="container shadow py-2 my-3 rounded">
                <h2 class="card-title text-center">Leave A Review</h2>
                <form class="needs-validation" action="/campgrounds/<%= campground._id %>/reviews" novalidate
                    method="POST">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" required></textarea>
                    <label for="rating" class="form-label">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating"
                        required></input>
                    <button class="btn btn-primary my-3">Submit</button>
                </form>
            </div>
            <div class="container my-3 p-2 shadow rounded">
                <h2>Reviews</h2>
                <hr>
                <% for(let review of campground.reviews) { %>
                    <h6>Rating: <%= review.rating %></h6>
                    <p> Review: <%= review.body %></p>
                    <hr>
                    <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <% } %>
            </div>
        </div>
    </div>